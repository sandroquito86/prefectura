<odoo>
  <data>



    <record model="ir.ui.view" id="gi_beneficiario_view_tree">
      <field name="name">Guayas Integra tree</field>
      <field name="model">gi.beneficiario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="apellido_paterno"/>
        </tree>
      </field>
    </record>

    <!-- Form view for "model" -->
    <record id="gi_beneficiario_view_form" model="ir.ui.view">
      <field name="name">gi.beneficiario.form</field>
      <field name="model">gi.beneficiario</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <form string="Beneficiarios" create="true" delete="true" edit="true">
          <header>
          </header>
          <sheet>
            <div class="row justify-content-between position-relative w-100 m-0 mb-2">
              <div class="oe_title mw-75 ps-0 pe-2">
                <h1 class="d-flex flex-row align-items-center">
                  <field name="name" placeholder="Nombre del Beneficiario" required="True" style="font-size: min(4vw, 2.6rem);"/>
                </h1>
                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="CategorÃ­a" groups="hr.group_hr_user"/>
              </div>
              <div class="o_employee_avatar m-0 p-0">
                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
              </div>
            </div>

            <group>
              <group string="Apellidos y Nombres">
                <field name="apellido_paterno"/>
                <field name="apellido_materno"/>
                <field name="primer_nombre"/>
                <field name="segundo_nombre"/>
              </group>
              <group string="Lugar y Fecha de Nacimiento">
                <field name="cedula"/>
                <field name="fecha_nacimiento"/>
                <field name="edad"/>
                <field name="pais_id"/>
                <field name="provincia_id"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search view for "model" -->
    <record id="gi_beneficiario_view_search" model="ir.ui.view">
      <field name="name">gi.beneficiario.search</field>
      <field name="model">gi.beneficiario</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="model_search">
          <field name="apellido_paterno" />
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="gi_beneficiario_act_windows">
      <field name="name">Beneficiarios</field>
      <field name="res_model">gi.beneficiario</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Beneficiarios" id="menu_gi_beneficiario" parent="menu_gi_registro" action="gi_beneficiario_act_windows" sequence="20"/>


  </data>
</odoo>
