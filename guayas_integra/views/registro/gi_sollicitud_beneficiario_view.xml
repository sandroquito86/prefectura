    <record model="ir.ui.view" id="gi_solicitud_beneficiario_view_tree">
      <field name="name">Guayas Integra tree</field>
      <field name="model">gi.solicitud_beneficiario</field>
      <field name="arch" type="xml">
        <tree>
          <field name="apellido_paterno"/>
        </tree>
      </field>
    </record>

    <!-- Form view for "model" -->
    <record id="gi_solicitud_beneficiario_view_form" model="ir.ui.view">
      <field name="name">gi.solicitud_beneficiario.form</field>
      <field name="model">gi.solicitud_beneficiario</field>
      <field name="type">form</field>
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <form string="Beneficiarios" create="true" delete="true" edit="true">
          <header>

            <field name="state" widget="statusbar" statusbar_visible="borrador,por_aprobar,aprobado"/>
            <!-- <button name="action_cancel" invisible="state not in ('assigned', 'confirmed', 'draft', 'waiting')" string="Cancel" groups="base.group_user" type="object" confirm="Are you sure you want to cancel this transfer?" data-hotkey="x"/> -->

          </header>
          <sheet>

            <div class="row justify-content-between position-relative w-100 m-0 mb-2">
              <div class="oe_title mw-75 ps-0 pe-2">
                <h1 class="d-flex flex-row align-items-center">
                  <field name="name" placeholder="Nombre del Beneficiario" required="True" style="font-size: min(4vw, 2.6rem);"/>
                </h1>
              </div>
              <div class="o_employee_avatar m-0 p-0">
                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
              </div>
            </div>
            <group>
              <group>
                <field name="fecha"/>
              </group>
              <group>
              </group>
            </group>

            <notebook>
              <page string="Beneficiario">
                <group>
                  <group>
                    <field name="apellido_paterno"/>
                    <field name="apellido_materno"/>
                    <field name="primer_nombre"/>
                    <field name="segundo_nombre"/>
                    <field name="email"/>
                  </group>
                  <group>
                    <field name="cedula"/>
                    <field name="fecha_nacimiento"/>
                    <field name="edad"/>
                    <field name="pais_id"/>
                    <field name="provincia_id"/>
                  </group>
                </group>
              </page>
              <page string="Representante">
                <group>
                  <group>
                    <field name="representante"/>
                    <field name="direccion"/>
                  </group>
                  <group>
                    <field name="telefono1"/>
                    <field name="telefono2"/>
                  </group>
                </group>
              </page>
              <page string="Discapacidad">
                <group>
                  <group>
                    <field name="carnet_discapacidad"/>
                    <field name="porcentaje_discapacidad"/>
                  </group>
                  <group>
                    <field name="tipo_discapacidad_id"/>
                    <field name="grado_id"/>
                  </group>
                </group>
                <group>
                  <field name="diagnostico"/>
                </group>
              </page>
              <page string="Servicios/Terapias">
                <group>
                  <field name="servicio_ids" widget="many2many_tags"/>
                </group>
              </page>
              <page string="Documentos de identidad">
                <group>
                  <group>
                    <field name="cedula_beneficiario_ids" widget="many2many_binary_preview"/>
                  </group>
                  <group>
                    <field name="cedula_padres_ids" widget="many2many_binary_preview"/>
                  </group>
                </group>
              </page>
              <page string="Documentos MÃ©dicos">
                <field name="evaluacion_medica_ids" widget="many2many_tags"/>
              </page>
            </notebook>

          </sheet>
        </form>
      </field>
    </record>

    <!-- Search view for "model" -->
    <record id="gi_solicitud_beneficiario_view_search" model="ir.ui.view">
      <field name="name">gi.solicitud_beneficiario.search</field>
      <field name="model">gi.solicitud_beneficiario</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="model_search">
          <field name="apellido_paterno" />
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="gi_solicitud_beneficiario_act_windows">
      <field name="name">Solicitud de Beneficiario</field>
      <field name="res_model">gi.solicitud_beneficiario</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Solicitud Beneficiario" id="menu_gi_solicitud_beneficiario_act_windows" parent="menu_gi_registro" action="gi_solicitud_beneficiario_act_windows" sequence="10"/>


  </data>
</odoo>
