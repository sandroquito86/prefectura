<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_pf_tipo_discapacidad_tree">
            <field name="name">pf.tipo_discapacidad.tree</field>
            <field name="model">pf.tipo_discapacidad</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="descripcion" />                   
                </tree>
            </field>
        </record>

        <record id="view_pf_tipo_discapacidad_form" model="ir.ui.view">
            <field name="name">pf.tipo_discapacidad.form</field>
            <field name="model">pf.tipo_discapacidad</field>
            <field name="arch" type="xml">
                <form string="Nuevo" duplicate="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="descripcion" />
                            </group>
                            
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers" />
                            <field name="message_ids" widget="mail_thread" />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        

        <record model="ir.actions.act_window" id="action_pf_tipo_discapacidad">
            <field name="name">Tipo de Discapacidad</field>
            <field name="res_model">pf.tipo_discapacidad</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_pf_tipo_discapacidad"
              name="Tipo de Discapacidad"
              action="action_pf_tipo_discapacidad"
              parent="menu_pf_catalogos"
              sequence="1" />

    </data>
</odoo>