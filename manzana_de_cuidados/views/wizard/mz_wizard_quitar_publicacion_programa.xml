<odoo>
    <record id="view_confirm_unpublish_wizard_form" model="ir.ui.view">
        <field name="name">confirm.unpublish.wizard.form</field>
        <field name="model">confirm.unpublish.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Unpublish">
                <group>
                    <field name="message" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>