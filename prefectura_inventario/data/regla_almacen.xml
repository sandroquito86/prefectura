<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Regla para acceso a almacenes -->
        <record id="rule_stock_warehouse_program" model="ir.rule">
            <field name="name">Acceso a Almac√©n por Programa</field>
            <field name="model_id" ref="stock.model_stock_warehouse"/>
            <field name="domain_force">[('id', '=', user.programa_id.warehouse_id.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <!-- Regla para acceso a ubicaciones -->
        <record id="rule_stock_location_program" model="ir.rule">
            <field name="name">Acceso a Ubicaciones por Programa</field>
            <field name="model_id" ref="stock.model_stock_location"/>
            <field name="domain_force">[('warehouse_id', '=', user.programa_id.warehouse_id.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <!-- Regla para acceso a movimientos de stock -->
        <record id="rule_stock_move_program" model="ir.rule">
            <field name="name">Acceso a Movimientos de Stock por Programa</field>
            <field name="model_id" ref="stock.model_stock_move"/>
            <field name="domain_force">['|', ('location_id.warehouse_id', '=', user.programa_id.warehouse_id.id), ('location_dest_id.warehouse_id', '=', user.programa_id.warehouse_id.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <!-- Regla para acceso a operaciones de inventario -->
        <record id="rule_stock_picking_program" model="ir.rule">
            <field name="name">Acceso a Operaciones de Inventario por Programa</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="domain_force">[('picking_type_id.warehouse_id', '=', user.programa_id.warehouse_id.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>

        <record id="rule_stock_quant_programa" model="ir.rule">
            <field name="name">Inventario del Programa</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="domain_force">[('location_id.warehouse_id', '=', user.programa_id.warehouse_id.id)]</field>
            <field name="groups" eval="[(4, ref('stock.group_stock_user'))]"/>
        </record>
    </data>
</odoo>